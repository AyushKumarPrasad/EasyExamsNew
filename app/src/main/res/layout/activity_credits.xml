<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@mipmap/landingpage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Credits">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_credits"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back_credits"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/toolbar_arrowback" />
        <TextView
            android:text="Credits"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/textColor"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/contactUs1"
                android:paddingTop="30dp"
                android:layout_gravity="center"
                android:background="@mipmap/easyexams"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/contactUs2"
                android:text="@string/credits1"
                android:layout_marginTop="20dp"
                android:typeface="serif"
                android:textColor="@color/infocolor"
                android:fontFamily="@font/arbutus_slab"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/contactUs3"
                android:text="@string/credits2"
                android:layout_marginTop="20dp"
                android:typeface="serif"
                android:textColor="@color/infocolor"
                android:fontFamily="@font/arbutus_slab"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/contactUs4"
                android:text="@string/credits3"
                android:layout_marginTop="20dp"
                android:typeface="serif"
                android:textColor="@color/infocolor"
                android:fontFamily="@font/arbutus_slab"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/contactUs5"
                android:text="@string/credits4"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:typeface="serif"
                android:textColor="@color/infocolor"
                android:fontFamily="@font/arbutus_slab"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>