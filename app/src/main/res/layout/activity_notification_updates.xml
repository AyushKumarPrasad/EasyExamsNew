<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@mipmap/landingpage"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationUpdates">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_address"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back_notification"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/toolbar_arrowback" />
        <TextView
            android:text="Notification"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/textColor"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerviewdatabase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>